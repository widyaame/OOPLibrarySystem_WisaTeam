<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="com.perpustakaan.controller.BorrowBookController"
            xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="750.0"
            stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <top>
        <VBox spacing="5.0" alignment="CENTER">
            <Label styleClass="page-title" text="Peminjaman Buku" BorderPane.alignment="CENTER">
                <VBox.margin>
                    <Insets bottom="5.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="userInfoLabel" text="Pengguna: -" style="-fx-font-size: 12px; -fx-text-fill: #555;" />
             <BorderPane.margin>
                <Insets bottom="15.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <children>
                    <Label text="Cari Buku:" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                    <TextField fx:id="filterField" styleClass="text-field-filter" 
                               promptText="Ketik ISBN, Judul, atau Pengarang..." HBox.hgrow="ALWAYS" />
                </children>
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </HBox>
            <TableView fx:id="bookTableView" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="isbnColumn" prefWidth="150.0" text="ISBN" />
                    <TableColumn fx:id="titleColumn" prefWidth="250.0" text="Judul Buku" />
                    <TableColumn fx:id="authorColumn" prefWidth="200.0" text="Pengarang" />
                    <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Stok Tersedia" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10.0" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="15.0" />
            </BorderPane.margin>
            <children>
                <Button fx:id="borrowButton" onAction="#handleBorrowBookAction" text="Pinjam Buku Terpilih" styleClass="button-simpan" disable="true"/>
                <Button fx:id="refreshButton" onAction="#handleRefreshAction" text="Refresh Daftar" styleClass="button-refresh"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>