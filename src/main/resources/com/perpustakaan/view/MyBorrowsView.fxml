<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="com.perpustakaan.controller.MyBorrowsController"
            xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="850.0"
            stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <top>
        <VBox spacing="5.0" alignment="CENTER_LEFT">
            <Label styleClass="page-title" text="Riwayat Peminjaman Saya" BorderPane.alignment="CENTER_LEFT">
                <VBox.margin>
                    <Insets bottom="5.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="userInfoLabel" text="Peminjaman untuk: -" style="-fx-font-size: 14px; -fx-text-fill: #333; -fx-font-weight: bold;" />
            <BorderPane.margin>
                <Insets bottom="15.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <TableView fx:id="borrowsTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="bookTitleColumn" prefWidth="250.0" text="Judul Buku" />
                <TableColumn fx:id="borrowDateColumn" prefWidth="130.0" text="Tanggal Pinjam" />
                <TableColumn fx:id="dueDateColumn" prefWidth="130.0" text="Jatuh Tempo" />
                <TableColumn fx:id="returnDateColumn" prefWidth="130.0" text="Tanggal Kembali" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="fineColumn" prefWidth="100.0" text="Denda (Rp)" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10.0" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="15.0" />
            </BorderPane.margin>
            <children>
                <Button fx:id="refreshButton" onAction="#handleRefreshAction" text="Refresh" styleClass="button-refresh"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>