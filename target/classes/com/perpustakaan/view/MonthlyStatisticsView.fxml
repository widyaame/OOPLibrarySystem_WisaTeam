<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="com.perpustakaan.controller.MonthlyStatisticsController"
            xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="700.0"
            stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <top>
        <Label styleClass="page-title" text="Laporan Statistik Bulanan" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="15.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <TableView fx:id="statisticsTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="monthYearColumn" prefWidth="200.0" text="Bulan/Tahun" />
                <TableColumn fx:id="totalBorrowsColumn" prefWidth="150.0" text="Total Peminjaman" />
                <TableColumn fx:id="totalReturnsColumn" prefWidth="150.0" text="Total Pengembalian" />
                <TableColumn fx:id="totalFinesColumn" prefWidth="150.0" text="Total Denda (Rp)" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10.0" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="15.0" />
            </BorderPane.margin>
            <children>
                <Button fx:id="refreshButton" onAction="#handleRefreshStatsAction" text="Refresh Statistik" styleClass="button-refresh"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>