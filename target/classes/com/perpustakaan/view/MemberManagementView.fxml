<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="com.perpustakaan.controller.MemberController"
            xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="750.0"
            stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <top>
        <Label styleClass="page-title" text="Manajemen Data Anggota" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="15.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <TableView fx:id="memberTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID Anggota" />
                <TableColumn fx:id="fullNameColumn" prefWidth="200.0" text="Nama Lengkap" />
                <TableColumn fx:id="majorColumn" prefWidth="200.0" text="Jurusan" />
                <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="15.0" />
            </BorderPane.margin>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Filter Data:" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
                        <TextField fx:id="filterField" styleClass="text-field-filter" 
                                   promptText="Ketik ID, Nama, Jurusan, atau Email..." HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox spacing="10.0" alignment="CENTER_RIGHT" styleClass="action-button-bar">
                    <children>
                        <Button fx:id="addButton" onAction="#handleAddMemberAction" text="Tambah" styleClass="button-add"/>
                        <Button fx:id="editButton" onAction="#handleEditMemberAction" text="Edit" styleClass="button-edit"/>
                        <Button fx:id="deleteButton" onAction="#handleDeleteMemberAction" text="Hapus" styleClass="button-delete"/>
                        <Button fx:id="refreshButton" onAction="#handleRefreshMemberAction" text="Refresh" styleClass="button-refresh"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>